{
  "scripts": {
    "deploy:staging": "npm run build && firebase hosting:channel:deploy --expires 1w popstoreV1-staging"
  },
  "deploy": {
    "only": "hosting"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
